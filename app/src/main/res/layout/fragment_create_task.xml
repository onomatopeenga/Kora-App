<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <ImageView
        android:id="@+id/imgDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_tick"
        android:layout_alignParentEnd="true"
        app:tint="@color/textpurple" />

    <EditText
        android:layout_below="@+id/imgDone"
        android:id="@+id/newTaskText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:maxLines="1"
        android:inputType="text"
        android:fontFamily="@font/montserrat"
        android:hint="@string/new_task"
        android:layout_margin="15dp"
        android:textColor="@color/textpurple"
        android:textColorHint="@color/iconcolor2"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:textColor="@color/textpurple"
        android:textColorHint="@color/iconcolor2"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/set_reminder_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Set Reminder"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/loginbtnbackground"
        android:layout_below="@+id/tvDateTime"/>


</RelativeLayout>